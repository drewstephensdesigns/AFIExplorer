<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:strokeWidth="0dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <!-- OPTIONS TOUCH TARGET (48dp square, centered vertically at end) -->
        <ImageView
            android:id="@+id/optionsContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/cd_vertical_menu"
            android:padding="12dp"
            android:scaleType="center"
            android:src="@drawable/ic_menu_vert"
            app:tint="?attr/colorOnSurface"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- PUBLICATION NUMBER -->
        <TextView
            android:id="@+id/pubNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="?colorControlNormal"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/optionsContainer"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="CFETP3E4X1WG" />

        <!-- PUBLICATION TITLE -->
        <TextView
            android:id="@+id/pubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ibm_plex_sans"
            android:textColor="?colorControlNormal"
            android:textSize="@dimen/textview_xsmall_text"
            android:maxLines="3"
            android:ellipsize="end"
            android:alpha="0.87"
            android:paddingTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/optionsContainer"
            app:layout_constraintTop_toBottomOf="@id/pubNumber"
            tools:text="WATER AND FUEL SYSTEMS MAINTENANCE WAGE GRADE SERIES 4201/4204..." />

        <!-- CERT DATE -->
        <TextView
            android:id="@+id/pubCertDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:textColor="?attr/colorOnSurface"
            android:textSize="@dimen/textview_small_text"
            android:alpha="0.6"
            android:paddingTop="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/optionsContainer"
            app:layout_constraintTop_toBottomOf="@id/pubTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Certified" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>