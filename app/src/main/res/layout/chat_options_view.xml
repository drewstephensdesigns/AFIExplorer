<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:apps="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        apps:src="@tools:sample/avatars"
        android:contentDescription="topic_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Administrative Actions"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:textColor="?colorOnSurfaceVariant"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintStart_toEndOf="@id/iconImageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/pubNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="DAFI36-2907"
        android:textSize="13sp"
        android:textColor="?colorControlNormal"
        android:fontFamily="@font/roboto"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="@id/titleTextView"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/subtitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Proper wear of approved uniform items, insignias &amp; decorations"
        android:textSize="13sp"
        android:textColor="?colorControlNormal"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="@dimen/small_margin"
        app:layout_constraintStart_toStartOf="@id/pubNumber"
        app:layout_constraintTop_toBottomOf="@id/pubNumber"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>