<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/chat_afi_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Prompt"
        android:textColor="?colorControlNormal"
        android:textStyle="bold"
        android:textSize="14sp"
        android:fontFamily="@font/ibm_plex_sans"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/cd_chat_afi_icon" />

    <!-- AI Response Bubble -->
    <!-- Example for User -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="end"
        app:cardBackgroundColor="?colorPrimaryContainer"
        app:cardCornerRadius="16dp">

        <TextView
            android:id="@+id/messageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?colorOnPrimaryContainer"
            android:padding="12dp"
            tools:text="What is the summary of changes in bullet point format?" />
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>






























