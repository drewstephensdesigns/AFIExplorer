<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_darker</item>
        <item name="colorPrimaryVariant">@color/black_darker</item>
        <item name="colorOnPrimary">@color/black_darker</item>
        <item name="titleTextColor">@color/pub_little_text</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bottom_nav_icon</item>
        <item name="colorSecondaryVariant">@color/bottom_nav_icon</item>
        <item name="colorOnSecondary">@color/black_darker</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black_darker</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:colorControlNormal">@color/pub_little_text</item>
        <item name="iconTint">@color/pub_little_text</item>

        <!-- Sheets: https://github.com/maxkeppeler/sheets -->
        <item name="sheetsTitleColor">@color/pub_little_text</item>
        <item name="sheetsPrimaryColor">@color/pub_little_text</item>
        <item name="sheetsHighlightColor">@color/bottom_nav_icon</item>
        <item name="sheetsDividerColor">@color/pub_little_text</item>
        <item name="sheetsContentColor">@color/pub_little_text</item>
        <item name="sheetsContentFont">@font/roboto</item>
        <item name="sheetsTitleFont">@font/noto_sans</item>
        <item name="sheetsNegativeButtonColor">@color/bottom_nav_icon</item>

    </style>

    <!-- PDF Reader Fallback -->
    <style name="Theme.PdfView.SelectedTheme" parent="@style/Theme.PdfView.Dark">
        <item name="pdfView_actionBarTint">#21222B</item>
        <item name="pdfView_downloadIconTint">#B5AFAF</item>
        <item name="pdfView_titleTextStyle">@style/actionBarTitleAppearance</item>
        <item name="pdfView_progressBar">@style/customProgressBar</item>
        <item name="pdfView_backIcon">@drawable/ic_arrow_back</item>
    </style>

    <!-- Text Style for PDF Reader Fallback -->
    <style name="actionBarTitleAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#B5AFAF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Progress Bar Indicator -->
    <style name="customProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateDrawable">@drawable/progress_circle</item>
        <item name="android:interpolator">@android:interpolator/accelerate_decelerate</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- Open Source Licenses Plugin -->
    <style name="ossTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black_darker</item>
        <item name="colorPrimaryDark">@color/black_darker</item>
        <item name="android:windowBackground">#171719</item>
        <item name="android:textColor">#B5AFAF</item>
    </style>

    <!-- Custom Theme -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
    <style name="FabExtendedMaterialTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:backgroundTint">@color/pub_little_text</item>
    </style>

</resources>
