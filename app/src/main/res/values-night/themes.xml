<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.AFIExplorer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/columbia_blue</item>
        <item name="colorPrimaryVariant">@color/air_force_dark_blue</item>
        <item name="colorOnPrimary">@color/charcoal</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cadet_blue</item>
        <item name="colorSecondaryVariant">@color/columbia_blue</item>
        <item name="colorOnSecondary">@color/charcoal</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorSurfaceContainerLow</item>
        <item name="android:navigationBarColor">?colorSurfaceContainerLow</item>

        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
        <item name="colorError">@color/burnt_sienna</item>

        <!-- Sheets Plugin -->
        <!-- Sheets: https://github.com/maxkeppeler/sheets -->
        <item name="sheetsTitleColor">@color/cadet_blue</item>
        <item name="sheetsPrimaryColor">@color/cadet_blue</item>
        <item name="sheetsBackgroundColor">?attr/colorSurfaceContainerLow</item>
        <item name="sheetsHighlightColor">@color/air_force_blue</item>
        <item name="sheetsDividerColor">@color/cadet_blue</item>
        <item name="sheetsContentColor">@color/cadet_blue</item>
        <item name="sheetsContentFont">@font/noto_sans</item>
        <item name="sheetsTitleFont">@font/ibm_plex_sans</item>
        <item name="sheetsNegativeButtonColor">@color/air_force_blue</item>
    </style>

    <style name="AboutCard" parent="Theme.AFIExplorer">
        <item name="cardBackgroundColor">?attr/colorSurfaceContainerLow</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="AboutItem">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/noto_sans</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="drawableTint">@color/cadet_blue</item>
    </style>

    <style name="PlaceholderCard" parent="Theme.AFIExplorer">
        <item name="cardBackgroundColor">@color/teal_200_transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/teal_200_transparent</item>
    </style>

</resources>
