<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_white</item>
        <item name="colorPrimaryVariant">@color/black_darker</item>
        <item name="colorOnPrimary">@color/light_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/bottom_nav_icon</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="navigationIconTint">@color/black</item>

        <item name="colorSurfaceContainer">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/light_white</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlNormal">@color/pub_big_text</item>
        <item name="android:windowBackground">@color/light_white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <item name="titleTextColor">@color/pub_big_text</item>
        <item name="android:textColorSecondary">@color/black_darker</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="actionOverflowButtonStyle">@style/DotsDarkTheme</item>
        <item name="iconTint">@color/black_darker</item>

        <!-- Sheets: https://github.com/maxkeppeler/sheets -->
        <item name="sheetsTitleColor">@color/black</item>
        <item name="sheetsPrimaryColor">@color/black</item>
        <item name="sheetsHighlightColor">@color/bottom_nav_icon_dark</item>
        <item name="sheetsDividerColor">@color/black</item>
        <item name="sheetsContentColor">@color/black</item>
        <item name="sheetsContentFont">@font/roboto</item>
    </style>

    <!-- Overflow Menu -->
    <style name="DotsDarkTheme" parent="@style/Widget.AppCompat.ActionButton.Overflow" >
        <item name="android:tint">@color/black_darker</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_rect</item>
    </style>

</resources>