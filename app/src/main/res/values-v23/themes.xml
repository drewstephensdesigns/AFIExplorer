<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
    New theme
    8 APR 2024 -->
    <style name="Theme.AFIExplorer" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/air_force_dark_blue</item>
        <item name="colorPrimaryVariant">@color/columbia_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sea_green</item>
        <item name="colorSecondaryVariant">@color/cal_poly_green</item>
        <item name="colorOnSecondary">@color/charcoal</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorSurfaceContainerLow</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->

        <item name="android:colorControlNormal">@color/charcoal</item>
        <item name="colorError">@color/burnt_sienna</item>

        <!-- Sheets Plugin -->
        <!-- Sheets: https://github.com/maxkeppeler/sheets -->
        <item name="sheetsTitleColor">@color/cadet_blue</item>
        <item name="sheetsPrimaryColor">@color/cadet_blue</item>
        <item name="sheetsHighlightColor">@color/air_force_blue</item>
        <item name="sheetsDividerColor">@color/cadet_blue</item>
        <item name="sheetsContentColor">@color/cadet_blue</item>
        <item name="sheetsIconsColor">@color/white</item>
        <item name="sheetsContentFont">@font/noto_sans</item>
        <item name="sheetsTitleFont">@font/ibm_plex_sans</item>
        <item name="sheetsNegativeButtonColor">@color/air_force_blue</item>
    </style>

    <!-- About Me Card -->
    <style name="AboutCard" parent="Theme.AFIExplorer">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardElevation">5dp</item>
    </style>

    <!-- About Me Items -->
    <style name="AboutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="PlaceholderCard" parent="Theme.AFIExplorer">
        <item name="cardBackgroundColor">@color/teal_200_transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

</resources>
